<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.RequestXrayFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:fontFamily="@font/almarai_bold"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/xraysFragmentTitile"
        android:textColor="@color/colorDark"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/fragmentTitle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="start"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:hint="@string/userFullName"
            android:padding="8dp"
            android:background="@drawable/inputtext_shape"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/colorDark"
            android:fontFamily="@font/almarai_light"
            tools:ignore="RtlSymmetry" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="start"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:hint="@string/address"
            android:padding="8dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/inputtext_shape"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorDark"
            android:fontFamily="@font/almarai_light"
            tools:ignore="RtlSymmetry" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserPhoneNum"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="start"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:hint="@string/phoneNumber"
            android:padding="8dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/inputtext_shape"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorDark"
            android:fontFamily="@font/almarai_light"
            tools:ignore="RtlSymmetry" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserNationalID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="start"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:hint="@string/nationalID"
            android:padding="8dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/inputtext_shape"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorDark"
            android:fontFamily="@font/almarai_light"
            tools:ignore="RtlSymmetry" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="start"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:hint="@string/userEmail"
            android:padding="8dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/inputtext_shape"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorDark"
            android:fontFamily="@font/almarai_light"
            tools:ignore="RtlSymmetry" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="start"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:hint="@string/xrayType"
            android:padding="8dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/inputtext_shape"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorDark"
            android:fontFamily="@font/almarai_light"
            tools:ignore="RtlSymmetry" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etConfirmUserPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="start"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:hint="@string/analysisType"
            android:padding="8dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/inputtext_shape"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorDark"
            android:fontFamily="@font/almarai_light"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/btnUserSignUp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/requestNowText"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/almarai_bold"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/button_shape1"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>