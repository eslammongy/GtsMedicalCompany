<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context=".ui.activities.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline5"
        app:layout_constraintTop_toTopOf="@id/guideline4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:fontFamily="@font/almarai_bold"
                android:padding="5dp"
                android:text="@string/signUptext"
                android:textColor="@color/colorDark"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="@+id/ellipseImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <ImageView
                android:id="@+id/ellipseImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ellipse31"
                android:contentDescription="@string/todo" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/component13"
                android:scaleType="centerCrop"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_baseline_person_24"
                app:layout_constraintBottom_toBottomOf="@id/ellipseImage"
                app:layout_constraintEnd_toEndOf="@id/ellipseImage"
                app:layout_constraintStart_toStartOf="@id/ellipseImage"
                app:layout_constraintTop_toTopOf="@id/ellipseImage"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="start"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:hint="@string/user_name"
            android:padding="8dp"
            android:textColorHint="@color/Grey"
            android:background="@drawable/input_text_shape"
            android:layout_marginTop="15dp"
            android:inputType="textPersonName"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/colorDark"
            android:fontFamily="@font/almarai_light"
         />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="start"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:hint="@string/address"
            android:padding="8dp"
            android:textColorHint="@color/Grey"
            android:inputType="textPostalAddress"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/input_text_shape"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorDark"
            android:fontFamily="@font/almarai_light"
            tools:ignore="RtlSymmetry" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserPhoneNum"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="end"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:hint="@string/phoneNumber"
            android:padding="8dp"
            android:inputType="phone"
            android:textColorHint="@color/Grey"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/input_text_shape"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorDark"
            android:fontFamily="@font/almarai_light"
            tools:ignore="RtlSymmetry" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserNationalID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="end"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:hint="@string/nationalID"
            android:padding="8dp"
            android:inputType="phone"
            android:textColorHint="@color/Grey"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/input_text_shape"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorDark"
            android:fontFamily="@font/almarai_light"
            tools:ignore="RtlSymmetry" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:hint="@string/userEmail"
            android:padding="8dp"
            android:textColorHint="@color/Grey"
            android:inputType="textEmailAddress"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/input_text_shape"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorDark"
            android:fontFamily="@font/almarai_light"
            tools:ignore="RtlSymmetry" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
           android:layout_gravity="center"
           android:gravity="center"
           android:layout_marginHorizontal="10dp"
           android:layout_marginTop="10dp"
           android:background="@drawable/input_text_shape">

           <ImageView
               android:id="@+id/showHidePassword"
               android:layout_width="35dp"
               android:layout_height="35dp"
               android:layout_marginStart="8dp"
               android:contentDescription="@string/todo"
               android:src="@drawable/ic_baseline_visibility_off_24"/>
           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/etUserPassword"
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:gravity="end"
               android:textSize="20sp"
               android:paddingStart="10dp"
               android:hint="@string/password"
               android:padding="8dp"
               android:textColorHint="@color/Grey"
               android:inputType="textWebPassword"
               android:background="#EBE9E9"
               android:layout_marginHorizontal="10dp"
               android:textColor="@color/colorDark"
               android:fontFamily="@font/almarai_light"
               tools:ignore="RtlSymmetry" />
       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_text_shape">

            <ImageView
                android:id="@+id/showHideConfirmedPassword"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_baseline_visibility_off_24"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConfirmUserPassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="end"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:hint="@string/confirmPassword"
                android:padding="8dp"
                android:background="#EBE9E9"
                android:textColorHint="@color/Grey"
                android:inputType="textWebPassword"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/colorDark"
                android:fontFamily="@font/almarai_light"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <Button
            android:id="@+id/btnUserSignUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/joinNow"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/almarai_bold"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/button_shape1"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btnArrowBack"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="@font/almarai_bold"
            android:padding="5dp"
            android:text="@string/back"
            android:layout_marginTop="5dp"
            android:textColor="@color/teal_700"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_baseline_arrow_back_ios_24"
            app:drawableTint="@color/teal_700"
            app:layout_constraintBottom_toBottomOf="@+id/ellipseImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>